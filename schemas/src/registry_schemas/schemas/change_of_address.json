{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/change_of_address",
    "required": [
        "changeOfAddress"
    ],
    "definitions": {
        "changeOfAddress": {
            "type": "object",
            "properties": {
                "legalType": {
                    "enum": ["CP", "BC"]
                }
            },
            "allOf": [
                {
            "if": {
                "properties": {
                    "legalType": {
                        "const": "CP"
                    }
                }
            },
            "then": {
                "properties": {
                    "offices": {
                        "registeredOffice": {
                            "$ref": "#/definitions/office"
                        },
                        "required": [
                            "registeredOffice"
                        ]
                    }
                },
                "required": [
                    "offices"
                ]
            }},
            {
            "if": {
                "properties": {
                    "legalType": {
                        "enum": ["BC"]
                    }
                }
            },
            "then": {
                "properties": {
                    "offices": {
                        "registeredOffice": {
                            "$ref": "#/definitions/office"
                        },
                        "recordsOffice": {
                            "$ref": "#/definitions/office"
                        },
                        "required": [
                            "registeredOffice"
                        ]
                    }
                },
                "required": [
                    "offices"
                ]
            }}
        ],
            "required": [
                "legalType"
            ]
        },
        "office": {
            "type": "object",
            "required": [
                "mailingAddress",
                "deliveryAddress"
            ],
            "properties": {
                "officeType": {
                    "type": "string"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                }
            }
        }
    },
    "properties": {
        "changeOfAddress": {
            "$ref": "#/definitions/changeOfAddress"
        }
    }
}