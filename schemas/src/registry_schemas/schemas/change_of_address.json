{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/change_of_address",
    "required": [
        "changeOfAddress"
    ],
    "type": "object",
    "title": "Change of Address Filing",
    "definitions": {
        "actions": {
            "type": "object",
            "properties": {
                "actions": {
                    "type": "array",
                    "title": "List of actions taken on an address",
                    "items": {
                        "type": "string",
                        "enum": [
                            "addressChanged"
                        ]
                    }
                }
            },
            "required": [
                "actions"
            ]
        },
        "office": {
            "type": "object",
            "properties": {
                "officeType": {
                    "type": "string",
                    "maxLength": 75
                },
                "addresses": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                            }
                        ]
                    }
                }
            },
            "required": ["officeType", "addresses"]
        },
        "properties": {
            "changeOfAddress": {
                "type": "object",
                "required": [
                    "addresses"
                ],
                "properties": {
                    "addresses": {
                        "type": "array",
                        "items": {
                            "allOf": [
                                {
                                    "$ref": "#definitions/office"
                                },
                                {
                                    "$ref": "#definitions/actions"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}